<div id="functional-test" class="item-details {{ item.functional_test.state || 'pending' }}">
	<h5>Functional Test</h5>
	<canvas id="pie" class="chart chart-pie"
	  chart-data="item.functional_test.tests_data" chart-labels="pie_labels" chart-colours="pie_colours">
	</canvas> 
	<div class="row">
		<div class="col-xs-6">
			<div class="progress">
			  <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: {{ (100 - (item.functional_test.tests_data[1] / item.functional_test.tests_data[0]) * 100 | number:0) || 0 }}%;">
					{{ (100 - (item.functional_test.tests_data[1] / item.functional_test.tests_data[0]) * 100 | number:0) || 0 }}%
			  </div>
			</div>
			<h6>tests passed</h6>
		</div>
		<div class="col-xs-6">
			<div class="progress">
			  <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="width: {{ item.functional_test.code_covered || 0 }}%;">
					{{ item.functional_test.code_covered || 0 }}%
			  </div>
			</div>
			<h6>code coverage</h6>
		</div>
	</div>
</div>